{
  "name": "taxonomy-visualisation",
  "version": "1.1.0",
  "description": "Taxonomy visualisation",
  "files": [
    "dist",
    "src"
  ],
  "directories": {
    "example": "example"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ProteinsWebTeam/taxonomy-visualisation.git"
  },
  "module": "src/index.js",
  "jsnext:main": "src/index.js",
  "main": "dist/taxonomy-visualisation-main.js",
  "author": "Aur√©lien Luciani <luciani@ebi.ac.uk> (https://github.com/aurel-l)",
  "keywords": [
    "visualisation",
    "visualization",
    "dataviz",
    "taxonomy",
    "species",
    "hmmer",
    "interpro",
    "ebi",
    "d3",
    "custom-element",
    "web-component"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "start": "webpack-dev-server --env.dev",
    "test": "npm run lint && npm run jest",
    "precommit": "lint-staged",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run test && npm run build",
    "clean": "rimraf dist",
    "lint": "eslint --ignore-path .gitignore .",
    "jest": "jest --notify --coverage src",
    "build": "webpack --env.production",
    "coveralls": "cat reports/jest-coverage/lcov.info | coveralls"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix --ignore-path .gitignore",
        "prettier --write",
        "git add"
      ],
      "*.md": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "jest": {
    "verbose": false,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 5,
        "functions": 5,
        "lines": 5,
        "statements": 5
      }
    },
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text-summary"
    ],
    "coverageDirectory": "reports/jest-coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.4",
    "@webcomponents/webcomponentsjs": "2.2.7",
    "babel-eslint": "10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "coveralls": "3.0.3",
    "d3": "5.9.1",
    "eslint": "5.14.1",
    "eslint-config-prettier": "4.1.0",
    "html-webpack-plugin": "3.2.0",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "lint-staged": "8.1.4",
    "prettier": "1.16.4",
    "rimraf": "2.6.3",
    "webpack": "4.29.5",
    "webpack-cli": "3.2.3",
    "webpack-dev-server": "3.2.1"
  },
  "dependencies": {
    "classnames": "2.2.6"
  }
}
