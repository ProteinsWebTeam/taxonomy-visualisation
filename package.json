{
  "name": "taxonomy-visualisation",
  "version": "0.1.9",
  "description": "Taxonomy visualisation",
  "files": [
    "dist",
    "src"
  ],
  "directories": {
    "example": "example"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ProteinsWebTeam/taxonomy-visualisation.git"
  },
  "module": "src/index.js",
  "jsnext:main": "src/index.js",
  "main": "dist/taxonomy-visualisation.js",
  "author": "Aur√©lien Luciani <luciani@ebi.ac.uk> (https://github.com/aurel-l)",
  "keywords": [
    "visualisation",
    "visualization",
    "dataviz",
    "taxonomy",
    "species",
    "hmmer",
    "interpro",
    "ebi"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "start": "webpack-dev-server",
    "test": "npm run lint && npm run jest",
    "precommit": "lint-staged",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run test && npm run build",
    "clean": "rimraf dist",
    "lint": "eslint --ignore-path .gitignore .",
    "jest": "jest --notify --coverage src",
    "build": "webpack --env.production",
    "coveralls": "cat reports/jest-coverage/lcov.info | coveralls"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix --ignore-path .gitignore",
        "prettier --single-quote --trailing-comma es5 --write",
        "git add"
      ]
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false,
          "loose": true,
          "useBuiltIns": true,
          "targets": {
            "browsers": "last 1 version, > 10%"
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "jest": {
    "verbose": false,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 5,
        "functions": 5,
        "lines": 5,
        "statements": 5
      }
    },
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text-summary"
    ],
    "coverageDirectory": "reports/jest-coverage"
  },
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.3",
    "babel-loader": "7.1.4",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.2",
    "babel-preset-env": "1.6.1",
    "coveralls": "3.0.1",
    "eslint": "4.19.1",
    "eslint-config-prettier": "2.9.0",
    "html-webpack-plugin": "3.2.0",
    "husky": "0.14.3",
    "jest": "22.4.3",
    "lint-staged": "7.1.0",
    "prettier": "1.12.1",
    "rimraf": "2.6.2",
    "webpack": "4.8.1",
    "webpack-cli": "2.1.3",
    "webpack-dev-server": "3.1.4"
  },
  "dependencies": {
    "d3": "5.3.0"
  }
}
