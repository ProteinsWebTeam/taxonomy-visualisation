{
  "name": "taxonomy-visualisation",
  "version": "0.1.5",
  "description": "Taxonomy visualisation",
  "files": [
    "dist",
    "src"
  ],
  "directories": {
    "example": "example"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ProteinsWebTeam/taxonomy-visualisation.git"
  },
  "module": "src/index.js",
  "jsnext:main": "src/index.js",
  "main": "dist/taxonomy-visualisation.js",
  "author": "Aur√©lien Luciani <luciani@ebi.ac.uk> (https://github.com/aurel-l)",
  "keywords": [
    "visualisation",
    "taxonomy",
    "species",
    "hmmer",
    "interpro",
    "ebi"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "start": "webpack-dev-server",
    "test": "npm run lint && npm run jest",
    "precommit": "lint-staged",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run test && npm run build",
    "clean": "rimraf dist",
    "lint": "eslint --ignore-path .gitignore .",
    "jest": "jest --notify",
    "build": "webpack --env.production"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix --ignore-path .gitignore",
        "prettier --single-quote --trailing-comma es5 --write",
        "git add"
      ]
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false,
          "loose": true,
          "useBuiltIns": true,
          "targets": {
            "browsers": "last 1 version, > 10%"
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "jest": {
    "verbose": true,
    "rootDir": "src",
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 5,
        "functions": 5,
        "lines": 5,
        "statements": 5
      }
    }
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-eslint": "8.0.1",
    "babel-loader": "7.1.2",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.0",
    "babel-preset-env": "1.6.0",
    "eslint": "4.8.0",
    "eslint-config-prettier": "2.6.0",
    "html-webpack-plugin": "2.30.1",
    "husky": "0.14.3",
    "jest": "21.2.1",
    "lint-staged": "4.2.3",
    "prettier": "1.7.4",
    "rimraf": "2.6.2",
    "webpack": "3.6.0",
    "webpack-dev-server": "2.9.1"
  },
  "dependencies": {
    "d3": "4.11.0"
  }
}
