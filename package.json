{
  "name": "taxonomy-visualisation",
  "version": "1.2.5-alpha.1.0",
  "description": "Taxonomy visualisation",
  "files": [
    "dist",
    "src"
  ],
  "directories": {
    "example": "example"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ProteinsWebTeam/taxonomy-visualisation.git"
  },
  "module": "src/index.js",
  "jsnext:main": "src/index.js",
  "main": "dist/taxonomy-visualisation-main.js",
  "author": "Aur√©lien Luciani <luciani@ebi.ac.uk> (https://github.com/aurel-l)",
  "keywords": [
    "visualisation",
    "visualization",
    "dataviz",
    "taxonomy",
    "species",
    "hmmer",
    "interpro",
    "ebi",
    "d3",
    "custom-element",
    "web-component"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "start": "webpack serve --mode=development --env dev",
    "test": "npm run lint && npm run jest",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run test && npm run build",
    "clean": "rimraf dist",
    "lint": "eslint --ignore-path .gitignore .",
    "jest": "jest --coverage src",
    "build": "webpack --env production",
    "coveralls": "cat reports/jest-coverage/lcov.info | coveralls"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --ignore-path .gitignore",
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "verbose": false,
    "moduleNameMapper": {
      "d3-hierarchy": "<rootDir>/node_modules/d3-hierarchy/dist/d3-hierarchy.min.js"
    },
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 5,
        "functions": 5,
        "lines": 5,
        "statements": 5
      }
    },
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text-summary"
    ],
    "coverageDirectory": "reports/jest-coverage"
  },
  "devDependencies": {
    "@babel/core": "7.18.2",
    "@babel/eslint-parser": "7.18.2",
    "@babel/plugin-transform-modules-commonjs": "7.18.2",
    "@babel/preset-env": "7.18.2",
    "@webcomponents/webcomponentsjs": "2.6.0",
    "babel-loader": "8.2.5",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "coveralls": "3.1.1",
    "eslint": "8.17.0",
    "eslint-config-prettier": "8.5.0",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.1",
    "jest": "28.1.1",
    "lint-staged": "13.0.1",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "webpack": "5.73.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.9.2"
  },
  "dependencies": {
    "@babel/runtime": "7.18.3",
    "classnames": "2.3.1",
    "core-js": "3.22.8",
    "d3-array": "3.1.6",
    "d3-ease": "3.0.1",
    "d3-hierarchy": "3.1.2",
    "d3-selection": "3.0.0",
    "d3-shape": "3.1.0",
    "d3-zoom": "3.0.0"
  }
}
