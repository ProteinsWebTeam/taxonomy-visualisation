{
  "name": "taxonomy-visualisation",
  "version": "1.2.2",
  "description": "Taxonomy visualisation",
  "files": [
    "dist",
    "src"
  ],
  "directories": {
    "example": "example"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ProteinsWebTeam/taxonomy-visualisation.git"
  },
  "module": "src/index.js",
  "jsnext:main": "src/index.js",
  "main": "dist/taxonomy-visualisation-main.js",
  "author": "Aur√©lien Luciani <luciani@ebi.ac.uk> (https://github.com/aurel-l)",
  "keywords": [
    "visualisation",
    "visualization",
    "dataviz",
    "taxonomy",
    "species",
    "hmmer",
    "interpro",
    "ebi",
    "d3",
    "custom-element",
    "web-component"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "start": "webpack serve --mode=development --env dev",
    "test": "npm run lint && npm run jest",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run test && npm run build",
    "clean": "rimraf dist",
    "lint": "eslint --ignore-path .gitignore .",
    "jest": "jest --notify --coverage src",
    "build": "webpack --env production",
    "coveralls": "cat reports/jest-coverage/lcov.info | coveralls"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --ignore-path .gitignore",
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "verbose": false,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 5,
        "functions": 5,
        "lines": 5,
        "statements": 5
      }
    },
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text-summary"
    ],
    "coverageDirectory": "reports/jest-coverage"
  },
  "devDependencies": {
    "@babel/core": "7.12.9",
    "@babel/plugin-transform-modules-commonjs": "7.12.1",
    "@babel/preset-env": "7.12.7",
    "@webcomponents/webcomponentsjs": "2.5.0",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "coveralls": "3.1.0",
    "d3": "5.16.0",
    "eslint": "7.15.0",
    "eslint-config-prettier": "7.0.0",
    "html-webpack-plugin": "4.5.0",
    "husky": "4.3.5",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "webpack": "4.44.2",
    "webpack-cli": "4.2.0",
    "webpack-dev-server": "3.11.0"
  },
  "dependencies": {
    "@babel/runtime": "7.12.5",
    "classnames": "2.2.6",
    "core-js": "3.8.1"
  }
}
